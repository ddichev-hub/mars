{% if config.isis is defined %}
<config>
  <isis xmlns="http://ciena.com/ns/yang/ciena-isis">
    <instance>
      <tag>{{ config.isis.tag }}</tag>
      <net>{{ config.isis.net}}</net>
      <dynamic-hostname>true</dynamic-hostname>
      <level-type>{{ config.isis.level }}</level-type>
      <interfaces>
        <interface>
          <name>lb0</name>
          <interface-type>point-to-point</interface-type>
          <level-type>{{ config.isis.level }}</level-type>				
        </interface>
{% for fp in config.fps %}
{% if fp.isis %}
        <interface>
          <name>{{fp.name}}_{{fp.vlan}}</name>
          <interface-type>{{fp.isis_if_type}}</interface-type>
          {% if fp.isis_if_level is defined %}
          <level-type>{{ fp.isis_if_level }}</level-type>				
          {% else %}
          <level-type>{{ config.isis.level }}</level-type>				
          {% endif %}
        </interface>
{% endif %}
{% endfor %} 
      </interfaces>
    </instance>
  </isis>   
</config>
{% endif %}